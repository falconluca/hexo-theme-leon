fonts = Inter var,system-ui,-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Helvetica Neue,Arial,Noto Sans,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol,Noto Color Emoji

color-accent = #394867
color-primary = #1a202c

@font-face{
  font-family: 'Merriweather';
  src: url('../fonts/Merriweather-Bold.ttf');
}

body
  display flex
  flex-direction column
  justify-content flex-start
  align-items center /* For horizontal alignment */
  padding-top 5em
  padding-bottom 8em
  font-family 'Merriweather', serif
  color: color-primary
  font-size 1.1rem
  line-height 1.6em

div#content
  width 40em
  max-width 90%

h1#title
  margin-bottom 0.8em

@media (max-width: 600px)
  h1#title
    text-align center

div#menu-outer
  margin-top 0.5em


nav#menu-inner
  a,span
    margin-right 1em
    font-weight 520
  span
    color color-primary
    text-decoration none
  a
    color color-accent
    text-decoration underline

div#content-outer
  margin-top 2em
  div#content-inner
    a:not([class^="page-number"]):not([class^="extend next"]):not([class^="extend prev"]):not([class^="menu-item"]):not([class^="post-tag-link"]):not([class^="post-item-link"])
      text-decoration none
      color inherit
      border-bottom 3px solid #CBF8DF
      box-shadow inset 0 -4px 0 #cbf8df
      background transparent
      transition background 150ms ease
      &:hover, &:focus
        background #CBF8DF
    div#paginator
      margin-top 4em
      a
        color color-accent
        margin-right 1em
      span
        color color-accent
        margin-right 1em

div.post-item
  margin-bottom 1em
  display flex
  flex-direction row
  justify-content space-between
  p
    margin-top 0
    margin-bottom 0.5em
    border-bottom 1px solid #ddd
    &:hover, &:focus
      border-bottom-color #222;
    a
      color #19202b
      font-size 1.2em
      font-weight bold
      text-decoration none

time
  margin-right 0.4em
  color #ccc

// https://stylus-lang.com/docs/media.html
@media (max-width: 600px)
  div.post-item
    flex-direction column
    justify-content center
    align-items center

div#bottom-inner
  margin-top 8em
  hr
    background #CCCCCC
    height 1px
    border none
  div
    display flex
    height 2em
    justify-content space-between
    align-items center
    a
      color #888
      text-decoration none
      transition color 150ms ease
      &:hover, &:focus
        color: #222
    #hexo
      float right
    img
        width 1em
        height 1em
        margin-left 1em
        margin-top 3px

@media (max-width: 600px)
  div#bottom-inner
    div.website-info
      flex-direction column
      justify-content center
      align-items center
      margin-top 1.6em
    #hexo
      margin-top 0.6em

img
  max-width 100%

aside
  a
    color color-accent
  li
    margin-top 0.5em
    margin-bottom 0.5em

blockquote
    background: #f9f9f9;
    border-left: 0.35em solid #ccc;
    margin: 1.5em 10px;
    padding: 0.5em 10px;
    p
        display: inline;
blockquote.pullquote
    background none
    border-left none
    text-align: left
    width: 45%
    margin 0
    padding 0
    font-size 1.1em
    font-family font-serif
    color color-accent
    &.left
        margin-right: 1em
        float left
    &.right
        margin-left: 1em
        float right

@import '_post'
@import '_highlight/index'
